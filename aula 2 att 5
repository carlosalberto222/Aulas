#include <stdio.h>

int main() {
    int numero;

    // Entrada de dados
    printf("Digite um número: ");
    scanf("%d", &numero);

    // Uso do operador ternário para verificar par ou ímpar
    (numero % 2 == 0) ? 
        printf("O número é par.\n") : 
        printf("O número é ímpar.\n");

    return 0;
}
